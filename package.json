{
  "name": "claude-pr-reviewer",
  "version": "1.0.0",
  "description": "GitHub App that automatically reviews PRs using Claude AI",
  "type": "module",
  "main": "dist/reviewer/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/reviewer/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "cdk": "cdk",
    "cdk:deploy": "cdk deploy --all",
    "cdk:synth": "cdk synth"
  },
  "keywords": [
    "github",
    "pr-review",
    "claude",
    "ai",
    "code-review"
  ],
  "author": "env0",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-ecs": "^3.700.0",
    "@aws-sdk/client-secrets-manager": "^3.700.0",
    "@octokit/rest": "^21.0.0",
    "@octokit/auth-app": "^7.1.0",
    "@octokit/webhooks": "^13.2.0",
    "aws-cdk-lib": "^2.170.0",
    "constructs": "^10.3.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "source-map-support": "^0.5.21",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "aws-cdk": "^2.170.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}
